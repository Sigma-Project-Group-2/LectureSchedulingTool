@model LectureSchedulingTool.Models.RegisterViewModel
@using LectureSchedulingTool.Models

<script src="@Url.Content("~/Scripts/jquery-1.6.1.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"
        type="text/javascript"></script>

<h2>@Html.Localizate("CheckIn", (string)ViewBag.CurLang)</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@Html.Localizate("Advert_Register", (string)ViewBag.CurLang)</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label(@Html.Localizate("Email", (string)ViewBag.CurLang), new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(@Html.Localizate("Secret_Code", (string)ViewBag.CurLang), new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SecretCode, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(@Html.Localizate("Password", (string)ViewBag.CurLang), new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(@Html.Localizate("Password_Confirmation", (string)ViewBag.CurLang), new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@Html.Localizate("Register", (string)ViewBag.CurLang)" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}