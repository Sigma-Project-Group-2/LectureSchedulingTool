@using LectureSchedulingTool.Models;

<h2>Факультеты</h2>

<br /><br /><br />

@* Создание шапки таблицы *@
<table align="center" border="1">
    <thead>
        <tr>
            <td>№</td>
            <td>Название</td>
            <td>Аббревиатура</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @{
            List<Faculty> faculties = ViewBag.faculties;
            for (int i = 0; i < faculties.Count; i++)
            {
                if (ViewBag.action == 'e' && i == Convert.ToInt32(ViewBag.row))
                {
                    using (Html.BeginForm())
                    {
                        <tr>
                            <input type="hidden" name="row" value="@i" />
                            <input type="hidden" name="id_department" value="@faculties[i].id_faculty" />
                            <td>@(i + 1)</td>
                            <td><input type="text" name="name" value="@faculties[i].name" class="form-control" /></td>
                            <td><input type="text" name="abbreviation" value="@faculties[i].abbreviation" class="form-control" /></td>
                            <td><button type="submit" name="action" value="u" class="btn btn-default">Обновить</button></td>
                            <td><button type="submit" name="action" value="0" class="btn btn-default">Отменить</button></td>
                        </tr>
                    }
                }
                else
                {
                    using (Html.BeginForm())
                    {
                        <tr>
                            <input type="hidden" name="row" value="@i" />
                            <input type="hidden" name="id_department" value="@faculties[i].id_faculty" />
                            <td>@(i + 1) </td >
                            <td> @faculties[i].name </td >
                            <td> @faculties[i].abbreviation </td >
                            <td><button type="submit" name="action" value="e" class="btn btn-default"> Редактировать</button></td>
                            <td><button type="submit" name="action" value="r" class="btn btn-default"> Удалить</button></td>
                        </tr>
                    }
                }
            }
            if (ViewBag.action == 'a')
            {
                using (Html.BeginForm())
                {
                    <tr>
                        <td>@(faculties.Count + 1)</td>
                        <td><input type="text" name="name" class="form-control" /></td>
                        <td><input type="text" name="abbreviation" class="form-control" /></td>
                        <td><button type="submit" name="action" value="s" class="btn btn-default">Сохранить</button></td>
                        <td><button type="submit" name="action" value="0" class="btn btn-default">Отменить</button></td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
@if (ViewBag.action != 'a')
{
    using (Html.BeginForm())
    {
        <button type="submit" name="action" value="a" class="btn btn-default">Добавить</button>
    }
}