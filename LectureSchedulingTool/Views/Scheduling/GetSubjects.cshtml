@using LectureSchedulingTool.Models

@{
    List<SVM.Subject> subjects = ViewBag.subjects;

    if(subjects.Count != 0) { 

        for (int i = 0; i < subjects.Count; i++)
        {
            <option value="@subjects[i].id_subject">
                @(subjects[i].ToString())
            </option>
        }
    }
    else
    {
        <option value="-1">
            ------
        </option>
    }
}

