@model LectureSchedulingTool.Models.IndexViewModel

<h2>Настройки</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Настройки системы генерации расписания и Вашего аккаунта</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Пароль:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("изменить Ваш пароль", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
    </dl>
</div>
<hr />
